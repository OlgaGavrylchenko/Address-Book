<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@id/card_view"
        android:layout_gravity="top|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="15dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardElevation="5dp"
        card_view:cardMaxElevation="7dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:columnCount="1"
            android:rowCount="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_column="0"
                android:layout_row="0">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1.6"
                    android:text="@string/contact_name"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:contentDescription="@string/contact_name"
                    android:labelFor="@+id/contact_name"/>

                <EditText
                    android:id="@id/contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:textColor="@color/colorPrimaryDark"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_column="0"
                android:layout_row="1">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1.6"
                    android:text="@string/contact_phone"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:contentDescription="@string/contact_phone"
                    android:labelFor="@+id/contact_phone"/>

                <EditText
                    android:id="@id/contact_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:textColor="@color/colorPrimaryDark"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_column="0"
                android:layout_row="2">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1.6"
                    android:text="@string/contact_email"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:contentDescription="@string/contact_email"
                    android:labelFor="@+id/contact_email"/>

                <EditText
                    android:id="@id/contact_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:textColor="@color/colorPrimaryDark"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_column="0"
                android:layout_row="3">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1.6"
                    android:text="@string/contact_street"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:contentDescription="@string/contact_street"
                    android:labelFor="@+id/contact_street"/>

                <EditText
                    android:id="@id/contact_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:textColor="@color/colorPrimaryDark"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_column="0"
                android:layout_row="4">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1.6"
                    android:text="@string/contact_city"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:contentDescription="@string/contact_city"
                    android:labelFor="@+id/contact_city"/>

                <EditText
                    android:id="@id/contact_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:textColor="@color/colorPrimaryDark"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_column="0"
                android:layout_row="5">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1.6"
                    android:text="@string/contact_state"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:contentDescription="@string/contact_state"
                    android:labelFor="@+id/contact_state"/>

                <EditText
                    android:id="@id/contact_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:textColor="@color/colorPrimaryDark"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_column="0"
                android:layout_row="6">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1.6"
                    android:text="@string/contact_zip"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:contentDescription="@string/contact_zip"
                    android:labelFor="@+id/contact_zip"/>

                <EditText
                    android:id="@id/contact_zip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:textColor="@color/colorPrimaryDark"
                    android:enabled="false"/>
            </LinearLayout>

        </GridLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>